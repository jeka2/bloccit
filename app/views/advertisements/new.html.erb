<h1>Create your ad</h1>

<div class="col-md-8">
  <%= form_for @ad do |f| %>
    <div class="form-group">
      <%= f.label :title %>
      <%= f.text_field :title, class: 'ad-control', placeholder: "Enter Ad title" %>
    </div>
    <div class="form-group">
      <%= f.label :price %>
      <%= f.text_field :price, class: 'ad-control', placeholder: "Enter the ad price" %>
    </div>
    <div class="form-group">
      <%= f.label :copy %>
      <%= f.text_area :copy, rows: 8, class: 'form-control', placeholder: "Enter Ad body" %>
    </div>
    <div class="form-group">

      <%= f.submit "Save", class: 'btn btn-success' %>
    </div>
  <% end %>
</div>
